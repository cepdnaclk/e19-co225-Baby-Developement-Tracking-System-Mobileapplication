<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9935AA"
    tools:context=".WeightGraph">

    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#9935AA"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/btnBack_vaccine"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:textColor="#C7ACCC"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/back_arrow_icon"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEIGHT"
            android:textColor="#D5C0D8"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:padding="10dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/chart_card1"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card4outer">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="405dp"
                android:layout_gravity="center"
                android:background="@drawable/weight_graph_gradiant">
            </com.github.mikephil.charting.charts.BarChart>
            <LinearLayout
                android:id="@+id/chart_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/chart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEIGHT(KG)"
                    android:textSize="25sp"
                    android:textColor="#D6044B"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1outer"
        android:layout_width="173dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#0F8898"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/card1inner"
                android:layout_width="163dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/height_card1_gradiant" />
                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="CURRENT WEIGHT:"
                        android:textColor="#044F59"
                        android:textSize="18dp"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="start"
                        android:paddingStart="6dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/card1text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="-3dp"
                        android:layout_marginBottom="-26dp"
                        android:src="@drawable/height_card1_vector" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2outer"
        android:layout_width="173dp"
        android:layout_height="130dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#670C77"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/card2inner"
                android:layout_width="163dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/height_card2_gradiant" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="DEVIATION:"
                        android:textColor="#570565"
                        android:textSize="18dp"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="start"
                        android:paddingStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/card2text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/height_card2_vector" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3outer"
        android:layout_width="173dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#BFAC03"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card1outer">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/card3inner"
                android:layout_width="163dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/height_card3_gradiant" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="STATUS:"
                        android:textColor="#6C6103"
                        android:textSize="18dp"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="start"
                        android:paddingStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/card3text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="9dp"
                        android:src="@drawable/height_card3_vector" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4outer"
        android:layout_width="173dp"
        android:layout_height="130dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#0965AE"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card2outer">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/card4inner"
                android:layout_width="163dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/height_card4_gradiant" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="PAST:"
                            android:textColor="#0B4777"
                            android:textSize="18dp"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="start"
                            android:paddingStart="8dp"
                            app:layout_constraintTop_toTopOf="parent" />
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/card4chart"
                            android:layout_width="109dp"
                            android:layout_height="120dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                        </com.github.mikephil.charting.charts.PieChart>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="9dp"
                        android:src="@drawable/height_card4_vector" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>